<h1>Recipes</h1>
<table class="table table-striped table-hover">
  <thead>
      <tr>
        <th>Title</th>
        <th>Servings</th>
        <th>Cook time</th>
        <th>Prep time</th>
        <th>Total time</th>
      </tr>
    </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.title, recipe %></td>
        <td><%= recipe.servings %></td>
        <td><%= recipe.cook_time %></td>
        <td><%= recipe.prep_time %></td>
        <td><%= recipe.cook_time + recipe.prep_time %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe_path(recipe), method: :delete, data: { confirm: "Are you sure?" } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create new article', new_recipe_path, class: 'link-to-color btn' %>
